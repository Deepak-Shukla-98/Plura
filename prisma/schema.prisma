datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique
  first_name    String
  last_name     String
  password      String
  profile       Profile?
}

model Profile {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId  
  username      String      @unique
  email         String      @unique
  first_name    String
  last_name     String
  dob           DateTime?
  gender        String?
  bio           String?
  address       String?
  profileImg    Bytes?
  user          User        @relation(fields: [userId], references: [id])
  userId        String      @unique @db.ObjectId
}

